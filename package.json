{
  "name": "@orthanc-protocol/client",
  "version": "0.2.0",
  "description": "Universal SDK for querying agent memory. The Orthanc Protocol standard.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json && node scripts/rename-esm.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "memory",
    "agent",
    "ai",
    "llm",
    "protocol",
    "orthanc",
    "langchain",
    "openai",
    "anthropic",
    "rag",
    "retrieval"
  ],
  "author": "Orthanc",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/orthanc-protocol/client-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/orthanc-protocol/client-sdk/issues"
  },
  "homepage": "https://github.com/orthanc-protocol/client-sdk#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
